@model PoliceWebApplication.CaseArticle

@{
    ViewData["Title"] = "Видалити статтю зі справи";
}

<h1><img src="~/css/police.png" width="100" height="100"> Видалити статтю зі справи № @ViewBag.CaseId</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Article)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Article.Info)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        @Html.ActionLink("Назад", "Index", new { id = ViewBag.investigatorId, caseId = ViewBag.CaseId})
    </form>
</div>
