@model PoliceWebApplication.CaseArticle

@{
    ViewData["Title"] = "Додати статтю у справу";
}

<h1><img src="~/css/police.png" width="100" height="100"> Додати статтю у справу № @ViewBag.CaseId</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.CaseId" name="CaseId"/>
            <div class="form-group">
                <label asp-for="ArticleId" class="control-label"></label>
                <select asp-for="ArticleId" class ="form-control" asp-items="ViewBag.ArticleId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "Index", new { id = ViewBag.InvestigatorId, caseId = ViewBag.CaseId})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
