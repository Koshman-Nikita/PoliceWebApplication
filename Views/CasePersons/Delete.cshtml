@model PoliceWebApplication.CasePerson

@{
    ViewData["Title"] = "Видалити суб`єкт зі справи";
}

<h1><img src="~/css/police.png" width="100" height="100"> Видалити суб`єкт зі справи № @ViewBag.CaseId</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Type.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Type.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        @Html.ActionLink("Назад", "Index", new { investigatorId = ViewBag.investigatorId, caseId = ViewBag.CaseId })
    </form>
</div>
