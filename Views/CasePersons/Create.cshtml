@model PoliceWebApplication.CasePerson

@{
    ViewData["Title"] = "Додати суб`єкт у справу";
}

<h1><img src="~/css/police.png" width="100" height="100"> Додати суб`єкт у справу № @ViewBag.CaseId</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.CaseId" name="CaseId" />
            <div class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                <select asp-for="PersonId" class ="form-control" asp-items="ViewBag.PersonId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "Index", new { investigatorId = ViewBag.InvestigatorId, caseId = ViewBag.CaseId }) |
    @Html.ActionLink("Нова особова справа", "NewPerson", new { caseId = ViewBag.CaseId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
