@model PoliceWebApplication.Street

@{
    ViewData["Title"] = "Змінити вулицю";
}

<h1><img src="~/css/police.png" width="100" height="100"> Змінити вулицю міста @ViewBag.CityName </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <input type="hidden" value="@ViewBag.CityId" name="CityId" />
            @*
        <div class="form-group">
            <label asp-for="CityId" class="control-label"></label>
            <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
            <span asp-validation-for="CityId" class="text-danger"></span>
        </div>
            *@
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Назад", "Index", new { id = @ViewBag.CityId, name = @ViewBag.CityName})
    @*<a asp-action="Index">Назад</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
